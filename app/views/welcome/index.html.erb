<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header bg-success">
        <h1 class="card-title">Lookup your forecast:</h1>
      </div>
        <div class="card-body">
          <div class="form-inline">
            <%= form_tag index_path do %>
              <%= text_field_tag :zipcode, nil, placeholder: "Enter zipcode", class: "form-control-sm" %>
              <%= submit_tag "Check weather", class: "btn btn-warning btn-sm" %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <% if @location != nil && @location != "" && (@error == "" || @error == nil) %>
      <div class="card">
        <div class="card-header bg-success">
          <h1 class="card-title">Forecast for <%= @location %></h1>
        </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-7">
                <p>Temperature is <%= @temp %>&deg;F</p>
                <p>Cloud Cover: <%= @cloudiness %>%</p>
                <p>Windiness: <%= @windiness %>mph</p>
              </div>
              <div class="col-md-5">
                <p>
                  <%= @weather_words %>
                  <img src="http://openweathermap.org/img/w/<%= @weather_icon %>.png">
                </p>
              </div>
            </div>
          </div>
      </div>
    <% elsif @status == "404" %>
            <p>Error: <%= @error %>.  Please try again.</p>
    <% end %>
  </div>
</div>
